pipeline {
    agent any

    tools {
        nodejs 'node22'     // Must match your Jenkins tool name
        jdk 'jdk17'
    }

    environment {
        SCANNER_HOME = tool 'sonar-scanner'
        TRIVY_CACHE = ".trivycache"     // FIXED: Jenkins-safe cache directory
    }

    stages {

        stage('Clean workspace') {
            steps {
                cleanWs(cleanWhenSuccess: false, deleteDirs: true)
            }
        }

        stage('Checkout') {
            steps {
                git 'https://github.com/DevanshuALW/DevOps-Project-Swiggy.git'
            }
        }

        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('sonar-server') {
                    sh """
                    ${SCANNER_HOME}/bin/sonar-scanner \
                        -Dsonar.projectKey=Swiggy \
                        -Dsonar.projectName=Swiggy \
                        -Dsonar.sources=. \
                        -Dsonar.exclusions=node_modules/**,.terraform/**,build/**,dist/**
                    """
                }
            }
        }

        stage('Quality Gate') {
            steps {
                timeout(time: 3, unit: 'MINUTES') {
                    waitForQualityGate abortPipeline: true
                }
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm ci'
            }
        }

        stage('Trivy FS Scan') {
            steps {
                sh """
                mkdir -p ${TRIVY_CACHE}
                trivy fs . --cache-dir ${TRIVY_CACHE} > trivyfs.txt
                """
            }
        }

        stage('Docker Build & Push (Optimized)') {
            steps {
                script {
                    withDockerRegistry([credentialsId: 'docker-creds']) {

                        sh """
                        echo "Building optimized multi-stage Docker image..."
                        docker build -t swiggy .
                        docker tag swiggy devanshu001/swiggy:latest
                        docker push devanshu001/swiggy:latest
                        """
                    }
                }
            }
        }

        stage('Trivy Docker Scan') {
            steps {
                sh """
                trivy image devanshu001/swiggy:latest \
                --cache-dir ${TRIVY_CACHE} > trivy.txt
                """
            }
        }
        stage('Deploy') {
            steps {
                sh """
                docker rm -f swiggy || true
                docker run -d --name swiggy -p 3000:3000 devanshu001/swiggy:latest
                """
            }
        }
    }
}
